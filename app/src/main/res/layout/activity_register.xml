<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epiphany.aditkotwal.socialnetworking.RegisterActivity"
    android:background="@drawable/wallpaper"
    >


    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/find_people" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_logo"
        android:hint="Email"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:background="@drawable/inputs"
        android:textSize="20sp"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:background="@drawable/inputs"
        android:textSize="20sp"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPassword"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/register_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Create Account"
        android:background="@drawable/button"
        android:textColor="#ffff"/>
</RelativeLayout>
